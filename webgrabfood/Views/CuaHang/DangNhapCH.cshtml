@using webgrabfood.Models;
@{
    ViewBag.Title = "DangNhapCH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  List<DanhMuc>
@if (Request.HttpMethod == "POST")
{
    if (ViewBag.kq != null)
    {
        if (ViewBag.kq)
        {
            <script type="text/html" charset="utf-8" >
                confirm('Đăng ký thành công')
            </script>
        }
        else
        {
            <script type="text/javascript">
                confirm('Đăng ký không thành công')
            </script>
        }
    }


}
<style>

    .now-login {
        width: 600px;
        margin: auto;
        clear: both;
        padding: 30px 0;
    }

        .now-login .content {
            padding: 30px;
            background-color: #fff;
            min-height: 400px;
            border-radius: 5px;
        }

        .now-login .title {
            font-size: 18px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 17px;
        }

        .now-login .text {
            font-size: 12px;
            color: #464646;
            text-align: center;
        }
</style>
<div class="now-login">
    <div class="content">
        <p style="margin:10px auto 10px ; text-align:center">ĐĂNG NHẬP QUÁN ĂN</p>
        <form action="/CuaHang/DangNhapCh" method="post">
            <input class="form-control" name="usename" type="text" style="width:100% ; height:30px ;margin:20px auto 10px " placeholder="Số điện thoại hoặc gmail" />
            <input class="form-control" name="pass" type="password" style="width:100% ; height:30px ;margin:20px auto 10px" placeholder="Password" />
            <input class="form-control btn-primary" type="submit" value="Đăng Nhập" style="width:100% ;margin:20px auto 10px" />
        </form>
        <button class="form-control btn-success" data-toggle="modal" data-target="#myModelCH">Đăng Ký</button>
        <div class="modal fade" id="myModelCH" tabindex="-1" role="dialog" aria-labelledby="mylabelCH" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header"><h3 class="modal-title" style="text-align:center">Đăng ký Quán Ăn</h3></div>
                    <div class="modal-body">
                        <form action="/Cuahang/DangKyChAsync" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Số Điện Thoại</label>
                                <input type="text" class="form-control" id="SDTCH" name="SDTCH" />
                            </div>
                            <div class="form-group">
                                <label>Gmail</label>
                                <input type="email" class="form-control" id="gmailCH" name="gmailCH" />
                            </div>
                            <div class="form-group">
                                <label>Tên Quán Ăn</label>
                                <input type="text" class="form-control" id="TenCH" name="TenCH" />
                            </div>
                            <div class="form-group">
                                <label>Loại Quán</label>
                                <select class="form-control" name="Loaiquan">
                                    @foreach(DanhMuc dm in Model)
                                    {
                                        <option value="@dm.IDDanhmuc">@dm.mName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Hình Ảnh Quán Ăn</label>
                                <input type="file" class="form-control" id="hinhanh" name="hinhanh" accept="image/*" />
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea rows="4" cols="1" class="form-control" id="Mota" name="Mota"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <select class="form-control" id="province" name="provinceCH" style="margin-top:5px" onchange="changeFunc();">
                                    <option value="" selected>Tỉnh/Thành Phố</option>
                                </select>
                                <select class="form-control" id="district" name="districtCH" style="margin-top:5px" onchange="changeFuncDictrict();">
                                    <option value="" selected>Quận/Huyện</option>
                                </select>
                                <select class="form-control" id="ward" name="wardCH" style="margin-top:5px">
                                    <option value="" selected>Phường/Xã</option>
                                </select>
                                <input class="form-control" type="text" id="duongCH" name="duongCH" placeholder="Số nhà, Tên Đường" style="margin-top:5px" />
                            </div>
                            <div class="form-group">
                                <label>Mật Khẩu</label>
                                <input type="password" class="form-control" id="PassCH" name="PassCH" placeholder="Mật Khẩu" />
                            </div><div class="form-group">
                                <label>Nhập lại mật khẩu</label>
                                <input type="password" class="form-control" id="cfPassCH" name="cfPassCH" placeholder="Nhập lại mật khẩu" />
                            </div>
                            <input class="form-control btn-success" type="submit" value="Đăng Ký Quán Ăn" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

