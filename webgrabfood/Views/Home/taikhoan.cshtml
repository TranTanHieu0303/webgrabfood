@using webgrabfood.Models;
@model KhachHang
<div class="row">
    @if (Model == null)
    {
        <div class="col-md-8">
            <a class="btn" href="@Url.Action("DangNhap","KhachHang")" style="border:solid 1px #0ff;border-radius:5px;height:50px;text-align:center;font-size:20px;font-weight:bold" role="button">
                Đăng Nhập
            </a>
        </div>
    }
    else
    {
        KhachHang kh = Session["kh"] as KhachHang;
        <div class="col-md-8">
            <p style="font-weight:bold;font-size:20px;padding:inherit">@kh.TenKH</p>
        </div>
        <div class="col-md-4">
            <nav class="navbar">
                <div class="dropdown">
                    <a class="dropdowwn-toggle" data-toggle="dropdown" id="TaiKhoan" aria-haspopup="true" aria-expanded="false" href="#"><img src="https://firebasestorage.googleapis.com/v0/b/grabfood-7b5a8.appspot.com/o/Image%2Favatar-facebook-chat-4_105604005.jpg?alt=media&token=40ceeec6-8c26-467c-8490-eeb284be6e17" style="width:50px;height:50px;border-radius: 30px;" /></a>
                    <div class="dropdown-menu" aria-labelledby="TaiKhoan" style="margin-left:-100px">
                        <a class="dropdown-item" href="@Url.Action("ThongTinTaiKhoan", "KhachHang", new {makh = kh.idKH })">Thông Tin Tài Khoản</a>
                        <a class="dropdown-item" href="@Url.Action("DangNhap","KhachHang")">Đăng Xuất</a>

                    </div>
                </div>
            </nav>
            <script src="~/Content/bootstrap/bootstrap/js/jquery-3.3.1.min.js"></script>
            <script src="~/Content/bootstrap/bootstrap/js/bootstrap.min.js"></script>


        </div>
    }
</div>
