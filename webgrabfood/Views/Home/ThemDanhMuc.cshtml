
@{
    ViewBag.Title = "ThemDanhMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(Request.HttpMethod == "POST")
            {
                <script type="text/javascript" charset="utf-8">
                    confirm('@ViewBag.tb');
                </script>
            }
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><h3 class="modal-title" style="text-align:center">Thêm Danh Mục Quán Ăn</h3></div>
            <div class="modal-body">
                <form action="/Home/ThemDanhMuc" method="post" enctype="multipart/form-data">
                    <input id="IDloai" class="form-control" name="IDloai" placeholder="Tên loại" style="display:none" />
                    <div class="form-group">
                        <label for="tenloai">Tên Mục</label>
                        <input id="tenloai" class="form-control" name="tenmuc" placeholder="Tên loại" />
                    </div>
                    <div class="form-group">
                        <label for="tenloai">Hình Ảnh Danh Mục</label><br />
                        <img id="hinh" class="img-rounded" style="width:100px;height:100px" />
                        <input id="Hinhanh" class="form-control" name="Hinhanh" type="file" accept="image/*" />
                    </div>
                    <input class="form-control btn-success" type="submit" id="themnemu" name="themnemu" value="Add" />
                </form>
            </div>
        </div>
    </div>